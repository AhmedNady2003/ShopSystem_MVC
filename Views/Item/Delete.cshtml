@model ShopWebMVC.Models.Item

@{
    ViewData["Title"] = "حذف الصنف";
}

<h1>حذف الصنف</h1>

<h3>هل أنت متأكد أنك تريد حذف هذا الصنف؟</h3>

<div>
    <h4>الصنف</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">رقم الصنف</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">اسم الصنف</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">السعر</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
