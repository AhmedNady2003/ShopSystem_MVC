@{
}
@model IEnumerable<ShopWebMVC.Models.Bakery>


<h1>قائمة المخابز</h1>

<table class="table">
    <thead>
        <tr>
            <th>الرقم التعريفي</th>
            <th>اسم المخبز</th>

            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>0</td>
            <td>العامة</td>

            <td>
                <a asp-action="CardsNotSpent" asp-route-id="" class="btn btn-info">بطاقات لم يتم الصرف </a>
                <a asp-action="CardsNotStruck" asp-route-id="" class="btn btn-info">بطاقات لم يتم الضرب وتم الصرف</a>

            </td>
        </tr>
        @foreach (var bakery in Model)
        {
            <tr>
                <td>@bakery.Id</td>
                <td>@bakery.Name</td>

                <td>
                    <a asp-action="CardsNotSpent" asp-route-id="@bakery.Id" class="btn btn-info">بطاقات لم يتم الصرف </a>
                    <a asp-action="CardsNotStruck" asp-route-id="@bakery.Id" class="btn btn-info">بطاقات لم يتم الضرب وتم الصرف</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary"> عودة </a>
