@model ShopWebMVC.Models.Card

@{
    ViewData["Title"] = "تفاصيل البطاقة";
}

<h1>تفاصيل البطاقة</h1>

<div>
    <h4>Card</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">الاسم الأول</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">الاسم الثاني</dt>
        <dd class="col-sm-10">@Model.SecondName</dd>

        <dt class="col-sm-2">الاسم الثالث</dt>
        <dd class="col-sm-10">@Model.ThirdName</dd>

        <dt class="col-sm-2">الاسم الرابع</dt>
        <dd class="col-sm-10">@Model.FourthName</dd>

        <dt class="col-sm-2">رقم الهاتف</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">العنوان</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">عدد الأفراد</dt>
        <dd class="col-sm-10">@Model.NumberOfIndividuals</dd>

        <dt class="col-sm-2">ملاحظات</dt>
        <dd class="col-sm-10">@Model.Notes</dd>

        <dt class="col-sm-2">المخبز</dt>
        <dd class="col-sm-10">@Model.Bakery?.Name</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>
<a asp-action="Index" class="btn btn-secondary">عودة</a>
